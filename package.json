{
  "name": "ext-firefox-ts",
  "version": "1.0.0",
  "description": "Snake game in Firefox devtools panel",
  "scripts": {
    "ts": "tsc -w",
    "dev:vite": "vite",
    "dev:ff": "web-ext -s ./src run",
    "dev:ff-dev": "web-ext -s ./src run --firefox=/Applications/Firefox\\ Developer\\ Edition.app/Contents/MacOS/firefox",
    "dev:css": "npx tailwindcss -i src/devtools/game/tailwind-input.css -o ./src/devtools/game/app.css -w",
    "dev": "npm-run-all -p dev:css dev:vite",
    "format": "prettier-standard --format",
    "test": "jest"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-standard": "^16.4.1",
    "tailwindcss": "3.0.7",
    "typescript": "^4.5.4",
    "web-ext": "^6.6.0",
    "vite": "^2.7.13"
  },
  "engines": {
    "node": ">= 16"
  },
  "volta": {
    "node": "16.13.1"
  },
  "author": "vansteki",
  "license": "MIT"
}
