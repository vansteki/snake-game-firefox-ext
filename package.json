{
  "name": "ext-firefox-ts",
  "version": "1.0.0",
  "description": "Snake game in Firefox devtools panel",
  "scripts": {
    "ts": "tsc",
    "dev": "web-ext -s ./src run",
    "dev:ff-dev": "web-ext -s ./src run --firefox=/Applications/Firefox\\ Developer\\ Edition.app/Contents/MacOS/firefox",
    "dev:css": "npx tailwindcss -i src/devtools/game/tailwind-input.css -o ./src/devtools/game/app.css -w",
    "dev:wp": "wp --config ./src/devtools/react/webpack.config.js",
    "format": "prettier-standard --format",
    "test": "jest"
  },
  "dependencies": {
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "react-router-dom": "5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.10",
    "@babel/preset-react": "^7.16.7",
    "babel-loader": "^8.2.3",
    "@tsconfig/node16": "^1.0.2",
    "prettier": "^2.5.1",
    "prettier-standard": "^16.4.1",
    "tailwindcss": "3.0.7",
    "typescript": "^4.5.4",
    "web-ext": "^6.6.0",
    "webpack": "^5.66.0",
    "webpack-nano": "^1.1.1",
    "webpack-plugin-serve": "^1.5.0"
  },
  "engines": {
    "node": ">= 16"
  },
  "volta": {
    "node": "16.13.1"
  },
  "author": "vansteki",
  "license": "MIT"
}
