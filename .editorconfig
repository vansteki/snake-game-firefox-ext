root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 190
tab_width = 2
trim_trailing_whitespace = true

[*.vue]
indent_size = 2
tab_width = 2

[{*.bash,*.sh,*.zsh,env}]
indent_size = 2
tab_width = 2

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2

[{*.hcl,*.nomad}]
indent_size = 2

[{*.htm,*.html,*.sht,*.shtm,*.shtml}]
indent_size = 2
tab_width = 2

[{*.tf,*.tfvars}]
indent_size = 2

[{*.yaml,*.yml,.drone.yml,adapter-pattern.yml,hostname-pods.yml,hostname-service.yml,psrt.yml,psrt_encrypt.yml,test,update}]
indent_size = 2
